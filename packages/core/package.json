{
  "name": "mkrtcjs-core",
  "version": "1.0.2",
  "description": "Core package for MkrtcJS â€” includes dependency injection, metadata handling, and base architecture utilities.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "copy-readme": "cp ../../readme.md ./README.md",
    "build": "npm run copy-readme && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "react",
    "architecture",
    "nest-inspired",
    "dependency-injection",
    "decorators"
  ],
  "author": "mkrtc",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts",
      "require": "./dist/server/index.js"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts",
      "require": "./dist/types/index.js"
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "next": "^15.3.2",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "tsc-alias": "^1.8.16"
  }
}
