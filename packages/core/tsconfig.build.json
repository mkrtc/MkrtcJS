{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/common": ["src/common"],
            "@/common/*": ["src/common/*"],
            "@/decorators": ["src/decorators"],
            "@/decorators/*": ["src/decorators/*"],
            "@/hooks": ["src/hooks"],
            "@/hooks/*": ["src/hooks/*"],
            "@/di": ["dsrc/i"],
            "@/di/*": ["src/di/*"],
            "@/types": ["src/types"],
            "@/types/*": ["src/types/*"],
            "@/utils": ["src/utils"],
            "@/utils/*": ["src/utils/*"],
            "@/exceptions/*": ["src/exceptions/*"],
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}