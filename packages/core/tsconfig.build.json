{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/src/*": ["src/*"],
            "@/common/*": ["src/common/*"],
            "@/decorators/*": ["src/decorators/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/di/*": ["src/di/*"],
            "@/types/*": ["src/types/*"],
            "@/utils/*": ["src/utils/*"],
            "@/exceptions/*": ["src/exceptions/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}